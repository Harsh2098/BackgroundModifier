<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/baseView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="10dp">

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="#FFFFFFFF"
        android:gravity="center"
        android:minHeight="30dp"
        android:minWidth="45dp"
        android:text="@string/reset"
        android:textSize="12sp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="8dp"/>

    <LinearLayout
        android:id="@+id/valuesTextBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/redTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/redTVPlaceholder"
            android:textAlignment="center"
            android:textColor="#F00"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/greenTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/greenTVPlaceholder"
            android:textAlignment="center"
            android:textColor="#0F0"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/blueTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/blueTVPlaceholder"
            android:textAlignment="center"
            android:textColor="#00F"
            android:textSize="24sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonsBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/redButton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@android:color/holo_red_light"
            android:text="@string/red"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/greenButton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@android:color/holo_green_light"
            android:text="@string/green"
            android:textAlignment="center"
            android:textSize="20sp" />

        <Button
            android:id="@+id/blueButton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_bright"
            android:text="@string/blue"
            android:textAlignment="center"
            android:textSize="20sp" />

    </LinearLayout>


</LinearLayout>
